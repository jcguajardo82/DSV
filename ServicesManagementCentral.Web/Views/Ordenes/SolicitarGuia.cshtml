@using ServicesManagement.Web.Models.ProcesoSurtido;

<div class="modal inmodal fade" id="dlgMotivoSol" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header pt-3 pb-1">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Solicitud de Guía</h4>
            </div>
            <div class="modal-body">
                <form id="frmCreateServicios">
                    <div class="row" id="divDdlMotSol">
                        <div class="col col-xs-12 col-md-12">
                            <div class="form-group">
                                <label>Motivo de Solicitud:</label>
                                <select id="ddlMotSol" class="form-control">
                                    @{
                                        <option value="0">--Seleccione</option>
                                        if (ViewBag.MotSol != null)
                                        {
                                            IEnumerable<MotivosSolicitud> listMotSol = ViewBag.MotSol as IEnumerable<MotivosSolicitud>;
                                            foreach (MotivosSolicitud item in listMotSol)
                                            {
                                                <option value="@item.IdCause">@item.Desc_Motivo</option>
                                            }
                                        }

                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="AceptarSol()">Aceptar</button>
            </div>
        </div>
    </div>
</div>
