
@{
    ViewBag.Title = "Liquidaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Liquidaciones</h2>
<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                <div class="form-group">
                    <label>Fecha Inicio</label>
                    <input type="date" id="txtFecIni" class="form-control" />
                    <div class="input-group date" id="datetimepicker1"></div>
                </div>
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3">
                <label>Fecha Fin</label>
                <input type="date" id="txtFecFin" class="form-control" />
                <div class="input-group date" id="datetimepicker2"></div>
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2" style="vertical-align:bottom;">
                <label>&nbsp;</label>
                <button class="btn btn-lg btn-block btn-primary mt-auto" type="submit" onclick="GetHistorialRMA()">
                    Buscar
                </button>
            </div>
            <div style="width:99%;">
                <table id="tblConsulta" class="display table table-striped table-bordered table-hover table-responsive-md expand dataTable no-footer ">
                    <thead class="bg-danger-sor">
                        <tr>
                            <th>Orden ID</th>
                            <th>ID transaccion</th>
                            <th>Fecha de creación</th>
                            <th>Hora de creación</th>
                            <th>No. Afiliacion</th>
                            <th>Adquirente</th>
                            <th>Catálogo</th>
                            <th>Tipo entrega</th>
                            <th>Canal de compra</th>
                            <th>Forma de pago</th>
                            <th>Estatus de pago</th>
                            <th>Tipo de almacen</th>
                            <th>Estatus del envío</th>
                            <th>Costo de envío</th>
                            <th>Monto total de la orden</th>
                            <th>Banco</th>
                            <th>Bin</th>
                            <th>Sufijo</th>
                            <th>Tipo de tarjeta</th>
                            <th>Marca</th>
                            <th>No. Autorizacion</th>
                            <th>MSI</th>	
                            <th>Correo</th>
                            <th>Nombre de persona a recibir</th>
                            <th>Apellido_P</th>
                            <th>Apellido_M</th>
                            <th>Fecha liquidación</th>
                            <th>Hora  de liquidación</th>
                            <th>Monto de liquidación</th>
                            <th>Liquidación Manual</th>
                            <th>Liquidación autómatica</th>
                            <th>ID transaccion Liquidación</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Session["listaGrid"] != null)
                            {
                                var lista = Newtonsoft.Json.JsonConvert.DeserializeObject<List<ServicesManagement.Web.Models.ProcesadorPagosSoriana.ProcesadorPagosBase>>(Session["listaGrid"].ToString());

                                foreach (ServicesManagement.Web.Models.ProcesadorPagosSoriana.ProcesadorPagosBase o in lista)
                                {
                                                <tr>
                                                    <td>@o.OrderReferenceNumber</td>
                                                    <td>@o.PaymentTransactionID</td>
                                                    <td>@o.OrderDate</td>
                                                    <td>@o.OrderHour</td>
                                                    <td>@*No. Afiliacion*@</td>
                                                    <td>@*Adquierente*@</td>
                                                    <td>@o.Catalogo</td>
                                                    <td>@o.shippingDeliveryDesc</td>
                                                    <td>@o.OrderSaleChannel</td>
                                                    <td>@o.paymentTypeJson</td>
                                                    <td>@*Estatus de pago*@</td>
                                                    <td>@*Tipo de almacen*@</td>
                                                    <td>@*Estatus del envío*@</td>
                                                    <td>@o.ShippingItemTotal</td>
                                                    <td>@o.orderAmount</td>
                                                    <td>@o.Bank</td>
                                                    <td>@o.BinCode</td>
                                                    <td>@o.MaskCard</td>
                                                    <td>@o.PaymentMethod</td>
                                                    <td>@o.TypeOfCard</td>
                                                    <td>@o.TransactionAuthorizationId</td>
                                                    <td>@o.shippingPaymentInstallments</td>
                                                    <td>@o.clientEmail</td>
                                                    <td>@o.ShippingFirstName</td>
                                                    <td>@o.ShippingLastName</td>
                                                    <td>@*Apellido_M*@</td>
                                                    <td>@*Fecha liquidación*@</td>
                                                    <td>@*Hora de liquidación*@</td>
                                                    <td>@*Monto de liquidación*@</td>
                                                    <td>@*Liquidación Manual*@</td>
                                                    <td>@*Liquidación autómatica*@</td>
                                                    <td>@*ID transaccion Liquidación*@</td>
                                                </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    @section scripts {
        <script>
        $(document).ready(function () {
            //GetReporte();
        });

        function GetReporte() {

            //var _Id_Num_UN = $("#hddTda").val();

            debugger;

            $.ajax({
                async: false,
                type: "GET",
                url: '@Url.Action("GetFormaPago", "ReportesPDP")',
                data: {
                    //  Id_Num_UN: _Id_Num_UN
                },

                datatype: "json",
                success: function (json) {
                    if (json.Success) {

                        $('#tblConsulta tbody').empty();
                        //var tr;
                        debugger;
                        //Append each row to html table

                        for (var i = 0; i < json.resp.length; i++) {
                            tr = $('<tr/>');


                            tr.append("<td>" + json.resp[i].NoOrden + "</td>");
                            tr.append("<td>" + json.resp[i].Fecha + "</td>");
                            tr.append("<td>" + json.resp[i].NoConsignacion + "</td>");
                            tr.append("<td>" + json.resp[i].Monto + "</td>");
                            tr.append("<td>" + json.resp[i].TipoPAgo + "</td>");
                            tr.append("<td>" + json.resp[i].Origen + "</td>");
                            tr.append("<td>" + json.resp[i].FecEntrega + "</td>");


                            $('#tblConsulta').append(tr);
                        }


                    }
                    else {
                        alert(json.Message);
                    }
                }
                , error: function (jqXHR, textStatus, errorThrown) {
                    //bootbox.alert(errorThrown);
                    alert("errorThrown");
                }

            });

        }

        </script>
        @*CONFIGURACION DE TABLAS, FILTROS, BOTONES DE EXPORT*@
        <script>
        $(document).ready(function () {
            $('#tblConsulta thead tr').clone(true).appendTo('#tblConsulta thead');
            $('#tblConsulta thead tr:eq(1) th').each(function (i) {
                if ($(this).attr('name') != "accion") {
                    var title = $(this).text();
                    $(this).html('<input type="text" class="form form-control input-sm" placeholder="' + title + '" />');

                    $('input', this).on('keyup change', function () {
                        if (table.column(i).search() !== this.value) {
                            table
                                .column(i)
                                .search(this.value)
                                .draw();
                        }
                    });
                } else {
                    $(this).empty();
                }
            });

            table = $("#tblConsulta").DataTable(
                {
                    dom: "<'row'<'col col-xs-6'B><'#topRightSection.col-xs-12 col-md-6 text-right' f>>" +
                        "<'row'<'col-sm-12'tr>>" +
                        "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'lp>>",
                    processing: true,
                    searching: true,
                    ordering: true,
                    order: [[1, 'asc']],
                    filter: true,
                    info: false,
                    stateSave: false,
                    select: false,
                    select: {
                        style: 'single'
                    },
                    //Paggin

                    paging: true,
                    pageLength: 10,
                    lengthMenu: [10, 25, 50, 100, 500],

                    // destroy: true, //destruye automaticamente la referencia a la tabla
                    //Ajax
                    //serverSide: true,
                    //bServerSide: true,
                    //sServerMethod: "GET",
                    buttons: ['csv', 'excel'],
                    orderCellsTop: false,
                    fixedHeader: {
                        header: true
                    },
                    "scrollX": true

                }
            );
        });


          function GetHistorialRMA() {
            var _FecIni = $("#txtFecIni").val();
            var _FecFin = $("#txtFecFin").val();

            if (_FecIni.length == 0) {
                $("#txtFecIni").focus();
                return;
            }

            if (_FecFin.length == 0) {
                $("#txtFecFin").focus();
                return;
            }

            debugger;

            $.ajax({
                async: false,
                type: "GET",
                url: '@Url.Action("GetParamDatesCanalCompra", "ReportesPDP")',
                data: {
                        FecIni: _FecIni,
                        FecFin: _FecFin,
                },
                datatype: "json",
                success: function (json) {
                    if (json.Success) {
                        debugger;

                        var myTable = $('#tblConsulta').DataTable();
                        myTable.clear().draw();

                        for (var i = 0; i < json.resp.length; i++) {
                            debugger;
                            var rw = json.resp[i];
                            var OrderReferenceNumber = rw.OrderReferenceNumber;
                            var PaymentTransactionID = rw.PaymentTransactionID;
                            var OrderDate = rw.OrderDate;
                            var OrderHour = rw.OrderHour;
                            var NoAfiliacion = "";
                            var Adquirente = "";
                            var Catalogo = rw.Catalogo;
                            var shippingDeliveryDesc = rw.shippingDeliveryDesc;
                            var OrderSaleChannel = rw.OrderSaleChannel;
                            var FormaPago = "";
                            var EstatusPago = "";
                            var TipoAlmacen = "";
                            var Estatusenvio = "";
                            var ShippingItemTotal = rw.ShippingItemTotal;
                            var orderAmount = rw.orderAmount;
                            var Bank = rw.Bank;
                            var BinCode = rw.BinCode;
                            var MaskCard = rw.MaskCard;
                            var PaymentMethod = rw.PaymentMethod;
                            var TypeOfCard = rw.TypeOfCard;
                            var TransactionAuthorizationId = rw.TransactionAuthorizationId;
                            var shippingPaymentInstallments = rw.shippingPaymentInstallments;
                            var clientEmail = rw.clientEmail;
                            var ShippingFirstName = rw.ShippingFirstName;
                            var ShippingLastName = rw.ShippingLastName

                            var Apellido_M = "";
                            var FechaLiquidacion = "";
                            var HoraLiquidacion = "";
                            var MontoLiquidacion = "";
                            var LiquidacionManual = "";
                            var LiquidacionAutomatica = "";
                            var IDTransaccionLiquidacion = "";

                            myTable.row.add([
                                OrderReferenceNumber  
                             , PaymentTransactionID  
                             , OrderDate  
                             , OrderHour  
                             , NoAfiliacion 
                             , Adquirente 
                             , Catalogo  
                             , shippingDeliveryDesc  
                             , OrderSaleChannel  
                             , FormaPago 
                             , EstatusPago 
                             , TipoAlmacen 
                             , Estatusenvio 
                             , ShippingItemTotal  
                             , orderAmount  
                             , Bank  
                             , BinCode  
                             , MaskCard  
                             , PaymentMethod  
                             , TypeOfCard  
                             , TransactionAuthorizationId  
                             , shippingPaymentInstallments  
                             , clientEmail  
                             , ShippingFirstName  
                             , ShippingLastName  
                             , Apellido_M 
                             , FechaLiquidacion 
                             , HoraLiquidacion 
                             , MontoLiquidacion 
                             , LiquidacionManual 
                             , LiquidacionAutomatica 
                             , IDTransaccionLiquidacion
                            ]).draw();
                        }
                        table.columns.adjust().draw();
                    }
                    else {
                        alert(json.Message);
                    }
                }
            });
        }
        </script>
    }

