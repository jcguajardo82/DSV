        function Confirmar() {
            var jsonCopy = _json;
            var jsonConfirm = [];
            var count = 0;
            for (var x = 0; x < jsonCopy.length; x++) {
                let _obj = {};
                _obj.idShip = jsonCopy[x].idShip;
                _obj.productId = jsonCopy[x].productId;
                _obj.ueNo = jsonCopy[x].ueNo;
                _obj.orderNo = jsonCopy[x].orderNo;
                _obj.ucc = jsonCopy[x].ucc;
                _obj.barcode = jsonCopy[x].barcode;
                _obj.cuenta = jsonCopy[x].cuenta;
                _obj.referencia = jsonCopy[x].referencia;
                _obj.pk = jsonCopy[x].pk;
                _obj.porcentaje = $("#porcentaje" + x).val();
                if (jsonCopy[x].tipoEmpaque != '')
                    count++;

                _obj.tipoEmpaque = jsonCopy[x].tipoEmpaque;
                _obj.ancho = $("#ancho" + x).val();
                _obj.largo = $("#largo" + x).val();
                _obj.alto = $("#alto" + x).val();
                _obj.peso = $("#peso" + x).val();
                jsonConfirm.push(_obj);
            }
            if (jsonCopy.length == count) {
                //alert('Guardarrr');

                console.log(jsonConfirm);
                for (var i = 0; i < jsonConfirm.length; i++) {
                    var items = new Array();
                    var products = new Array();
                    var _UeNo = jsonConfirm[i].ueNo;
                    var _OrderNo = jsonConfirm[i].orderNo;

                    var item = {};

                    item.Tipo = jsonConfirm[i].tipoEmpaque;
                    item.Peso = jsonConfirm[i].peso;
                    item.Largo = jsonConfirm[i].largo;
                    item.Ancho = jsonConfirm[i].ancho;
                    item.Alto = jsonConfirm[i].alto;

                    items.push(item);

                    var product = {};
                    product.Barcode = jsonConfirm[i].barcode;
                    product.ProductId = jsonConfirm[i].productId;
                    product.ProductName = '000000000';
                    product.product = {};
                    products.push(product);

                    var _ucc = jsonConfirm[i].ucc;
                    //Send the JSON array to Controller using AJAX.
                        $.ajax({
                            type: "POST",
                            url: '@Url.Action("AddEmbalaje", "Ordenes")',
                            data: JSON.stringify({
                                Paquetes: items,
                                UeNo: _UeNo,
                                OrderNo: _OrderNo,
                                Products: products
                                // Paquetes, string UeNo, int OrderNo,
                            }),
                            contentType: "application/json; charset=utf-8",
                            dataType: "json",
                            success: function (json) {
                                if (json.Success) {
                                    console.log(jsonConfirm);
                                    UCCProcessed(_ucc);
                                    //alert(json.resp);
                                }
                                else {
                                    alert(json.Message);
                                }
                            }
                            , error: function (jqXHR, textStatus, errorThrown) {
                                alert(errorThrown);

                            }
                        });

                }
                location.reload();
            }
            else
                alert('Los datos estan Incompletos');
        }

